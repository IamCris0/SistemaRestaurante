@model IEnumerable<RestauranteMVC.Models.Reserva>

@{
    ViewData["Title"] = "Reservas";
}

<div class="container mt-4">
    <h1 class="mb-4">
        <i class="bi bi-calendar-check"></i> Gesti√≥n de Reservas
    </h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nueva Reserva
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Fecha y Hora</th>
                        <th>Cliente</th>
                        <th>Mesa</th>
                        <th>Plato</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reserva in Model)
                    {
                        <tr>
                            <td>@reserva.IdReserva</td>
                            <td>@reserva.FechaHora.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@reserva.Cliente?.Nombres @reserva.Cliente?.Apellidos</td>
                            <td>
                                <span class="badge bg-info">
                                    Mesa @reserva.Mesa?.Numero
                                </span>
                            </td>
                            <td>@reserva.Plato?.Nombre</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@reserva.IdReserva"
                                   class="btn btn-sm btn-info" title="Ver Detalles">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@reserva.IdReserva"
                                   class="btn btn-sm btn-warning" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@reserva.IdReserva"
                                   class="btn btn-sm btn-danger" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>