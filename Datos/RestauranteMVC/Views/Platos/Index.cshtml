@model IEnumerable<RestauranteMVC.Models.Plato>

@{
    ViewData["Title"] = "Platos";
}

<div class="container mt-4">
    <h1 class="mb-4">
        <i class="bi bi-egg-fried"></i> Gestión del Menú
    </h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo Plato
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Categoría</th>
                        <th>Precio</th>
                        <th>Stock</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var plato in Model)
                    {
                        <tr>
                            <td>@plato.IdPlato</td>
                            <td>
                                <strong>@plato.Nombre</strong>
                                <br />
                                <small class="text-muted">@plato.Descripcion</small>
                            </td>
                            <td>
                                <span class="badge bg-info">
                                    @plato.Categoria?.Nombre
                                </span>
                            </td>
                            <td>
                                <strong class="text-success">$@plato.Precio.ToString("F2")</strong>
                            </td>
                            <td>
                                <span class="badge @(plato.Stock > 10 ? "bg-success" : plato.Stock > 0 ? "bg-warning" : "bg-danger")">
                                    @plato.Stock unidades
                                </span>
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@plato.IdPlato"
                                   class="btn btn-sm btn-info" title="Ver Detalles">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@plato.IdPlato"
                                   class="btn btn-sm btn-warning" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@plato.IdPlato"
                                   class="btn btn-sm btn-danger" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>