@model RestauranteMVC.Models.Cargo

@{
    ViewData["Title"] = "Eliminar Cargo";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-trash"></i> Eliminar Cargo
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>¿Está seguro que desea eliminar este cargo?</strong>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">ID:</dt>
                        <dd class="col-sm-9">@Model.IdCargo</dd>

                        <dt class="col-sm-3">Nombre:</dt>
                        <dd class="col-sm-9">@Model.Nombre</dd>

                        <dt class="col-sm-3">Descripción:</dt>
                        <dd class="col-sm-9">@Model.Descripcion</dd>

                        <dt class="col-sm-3">Empleados:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info">
                                @(Model.Empleados?.Count ?? 0) empleado(s) asociados
                            </span>
                        </dd>
                    </dl>

                    @if (Model.Empleados?.Count > 0)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-circle"></i>
                            <strong>Advertencia:</strong> Este cargo tiene empleados asociados.
                            No se podrá eliminar hasta que reasigne o elimine los empleados.
                        </div>
                    }

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="IdCargo" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger" 
                                    @(Model.Empleados?.Count > 0 ? "disabled" : "")>
                                <i class="bi bi-trash"></i> Eliminar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
