@model RestauranteMVC.Models.Empleado

@{
    ViewData["Title"] = "Eliminar Empleado";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-trash"></i> Eliminar Empleado
                    </h2>
                </div>
                <div class="card-body">

                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>¿Está seguro que desea eliminar este empleado?</strong>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Cédula:</dt>
                        <dd class="col-sm-8">@Model.Cedula</dd>

                        <dt class="col-sm-4">Nombre:</dt>
                        <dd class="col-sm-8"><strong>@Model.Nombres @Model.Apellidos</strong></dd>

                        <dt class="col-sm-4">Teléfono:</dt>
                        <dd class="col-sm-8">@Model.Telefono</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Salario:</dt>
                        <dd class="col-sm-8">$@Model.Salario</dd>

                        <dt class="col-sm-4">Cargo:</dt>
                        <dd class="col-sm-8">@Model.Cargo?.Nombre</dd>

                        <dt class="col-sm-4">Pedidos:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">
                                @(Model.Pedidos?.Count ?? 0) pedido(s)
                            </span>
                        </dd>
                    </dl>

                    @if ((Model.Pedidos?.Count ?? 0) > 0)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-circle"></i>
                            Este empleado tiene pedidos asociados.
                        </div>
                    }

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="IdEmpleado" />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger"
                            @((Model.Pedidos?.Count ?? 0) > 0 ? "disabled" : "")>
                                <i class="bi bi-trash"></i> Eliminar
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
