@model RestauranteMVC.Models.Pedido

@{
    ViewData["Title"] = "Eliminar Pedido";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-trash"></i> Eliminar Pedido
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>¿Está seguro que desea eliminar este pedido?</strong>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">ID Pedido:</dt>
                        <dd class="col-sm-9">@Model.IdPedido</dd>

                        <dt class="col-sm-3">Fecha:</dt>
                        <dd class="col-sm-9">@Model.Fecha.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-3">Cliente:</dt>
                        <dd class="col-sm-9">@Model.Cliente?.Nombres @Model.Cliente?.Apellidos</dd>

                        <dt class="col-sm-3">Empleado:</dt>
                        <dd class="col-sm-9">@Model.Empleado?.Nombres @Model.Empleado?.Apellidos</dd>

                        <dt class="col-sm-3">Total:</dt>
                        <dd class="col-sm-9"><strong class="text-success">$@Model.Total.ToString("F2")</strong></dd>

                        <dt class="col-sm-3">Estado:</dt>
                        <dd class="col-sm-9">
                            <span class="badge @(Model.Estado == "Completado" ? "bg-success" :
                                      Model.Estado == "En Proceso" ? "bg-warning" :
                                      Model.Estado == "Pendiente" ? "bg-info" : "bg-danger")">
                                @Model.Estado
                            </span>
                        </dd>
                    </dl>

                    @if (Model.PedidoPlatos != null && Model.PedidoPlatos.Any())
                    {
                        <hr />
                        <h5>Platos del pedido:</h5>
                        <ul class="list-group mb-3">
                            @foreach (var detalle in Model.PedidoPlatos)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>@detalle.Plato?.Nombre (x@detalle.Cantidad)</span>
                                    <span class="badge bg-primary rounded-pill">$@detalle.Subtotal.ToString("F2")</span>
                                </li>
                            }
                        </ul>
                    }

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="IdPedido" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Eliminar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>