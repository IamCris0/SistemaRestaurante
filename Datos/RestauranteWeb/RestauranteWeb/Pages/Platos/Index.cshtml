@page
@model RestauranteWeb.Pages.Platos.IndexModel
@{
    ViewData["Title"] = "Gestión de Platos";
}

<div class="container mt-4">
    <h2>Gestión de Platos</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col-md-6">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nuevo Plato
            </a>
        </div>
        <div class="col-md-6">
            <form method="get" class="d-flex justify-content-end">
                <div class="input-group" style="max-width: 400px;">
                    <input type="text" name="filtro" class="form-control"
                           placeholder="Buscar..." value="@Model.Filtro">
                    <button type="submit" class="btn btn-secondary">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th width="200">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Platos != null && Model.Platos.Count > 0)
                {
                    foreach (var plato in Model.Platos)
                    {
                        <tr>
                            <td>@plato.Idplato</td>
                            <td>@plato.Nombre</td>
                            <td>@plato.Descripcion</td>
                            <td>$@plato.Precio.ToString("N2")</td>
                            <td>
                                @if (plato.Stock > 10)
                                {
                                    <span class="badge bg-success">@plato.Stock</span>
                                }
                                else if (plato.Stock > 0)
                                {
                                    <span class="badge bg-warning">@plato.Stock</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Sin Stock</span>
                                }
                            </td>
                            <td>
                                <a asp-page="Edit" asp-route-id="@plato.Idplato"
                                   class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-page="Delete" asp-route-id="@plato.Idplato"
                                   class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">
                            No hay platos registrados
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}