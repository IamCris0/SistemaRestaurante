@page "{id:int}"
@model RestauranteWeb.Pages.Platos.EditModel
@{
    ViewData["Title"] = "Editar Plato";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-warning">
                    <h4><i class="bi bi-pencil"></i> Editar Plato</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["Error"]
                        </div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Plato.Idplato" class="form-label">ID Plato:</label>
                            <input asp-for="Plato.Idplato" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Plato.Nombre" class="form-label">Nombre:</label>
                            <input asp-for="Plato.Nombre" class="form-control" maxlength="50" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Plato.Descripcion" class="form-label">Descripción:</label>
                            <textarea asp-for="Plato.Descripcion" class="form-control" rows="3" maxlength="200"></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Plato.Precio" class="form-label">Precio:</label>
                                <input asp-for="Plato.Precio" type="number" step="0.01" class="form-control" required />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Plato.Stock" class="form-label">Stock:</label>
                                <input asp-for="Plato.Stock" type="number" class="form-control" required />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Plato.Idcategoria" class="form-label">Categoría:</label>
                                <select asp-for="Plato.Idcategoria" class="form-select" required>
                                    <option value="">-- Seleccione --</option>
                                    @foreach (var cat in Model.Categorias)
                                    {
                                        <option value="@cat.Idcategoria">@cat.Nombre</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Guardar Cambios
                            </button>
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}