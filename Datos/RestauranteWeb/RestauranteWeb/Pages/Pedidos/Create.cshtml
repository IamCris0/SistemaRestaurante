@page
@model RestauranteWeb.Pages.Pedidos.CreateModel
@{
    ViewData["Title"] = "Crear Pedido";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white"><h4><i class="bi bi-plus-circle"></i> Crear Nuevo Pedido</h4></div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Pedido.Idpedido" class="form-label">ID Pedido:</label>
                            <input asp-for="Pedido.Idpedido" class="form-control" required />
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Pedido.Fecha" class="form-label">Fecha:</label>
                                <input asp-for="Pedido.Fecha" type="datetime-local" class="form-control" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Pedido.Total" class="form-label">Total:</label>
                                <input asp-for="Pedido.Total" type="number" step="0.01" class="form-control" required />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Pedido.Estado" class="form-label">Estado:</label>
                            <select asp-for="Pedido.Estado" class="form-select" required>
                                <option value="">-- Seleccione --</option>
                                <option value="Pendiente">Pendiente</option>
                                <option value="En Preparación">En Preparación</option>
                                <option value="Listo">Listo</option>
                                <option value="Entregado">Entregado</option>
                                <option value="Cancelado">Cancelado</option>
                            </select>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Pedido.Idcliente" class="form-label">Cliente:</label>
                                <select asp-for="Pedido.Idcliente" class="form-select" required>
                                    <option value="">-- Seleccione --</option>
                                    @foreach (var c in Model.Clientes)
                                    {
                                        <option value="@c.Idcliente">@c.Nombre @c.Apellido</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Pedido.Idempleado" class="form-label">Empleado:</label>
                                <select asp-for="Pedido.Idempleado" class="form-select" required>
                                    <option value="">-- Seleccione --</option>
                                    @foreach (var e in Model.Empleados)
                                    {
                                        <option value="@e.Idempleado">@e.Nombre @e.Apellido</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="mt-4">
                            <button type="submit" class="btn btn-success"><i class="bi bi-save"></i> Guardar</button>
                            <a asp-page="Index" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
 }