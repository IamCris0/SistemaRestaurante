@page "{id:int}"
@model RestauranteWeb.Pages.Categorias.EditModel
@{
    ViewData["Title"] = "Editar Categoría";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-warning">
                    <h4><i class="bi bi-pencil"></i> Editar Categoría</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["Error"]
                        </div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Categoria.Idcategoria" class="form-label">ID Categoría:</label>
                            <input asp-for="Categoria.Idcategoria" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Categoria.Nombre" class="form-label">Nombre:</label>
                            <input asp-for="Categoria.Nombre" class="form-control" maxlength="50" required />
                            <span asp-validation-for="Categoria.Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Categoria.Descripcion" class="form-label">Descripción:</label>
                            <textarea asp-for="Categoria.Descripcion" class="form-control" rows="3" maxlength="150"></textarea>
                            <span asp-validation-for="Categoria.Descripcion" class="text-danger"></span>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Guardar Cambios
                            </button>
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}
