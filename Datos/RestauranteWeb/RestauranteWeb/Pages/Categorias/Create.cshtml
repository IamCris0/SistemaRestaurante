@page
@model RestauranteWeb.Pages.Categorias.CreateModel
@{
    ViewData["Title"] = "Crear Categoría";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4><i class="bi bi-plus-circle"></i> Crear Nueva Categoría</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Categoria.Idcategoria" class="form-label">ID Categoría:</label>
                            <input asp-for="Categoria.Idcategoria" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Categoria.Nombre" class="form-label">Nombre:</label>
                            <input asp-for="Categoria.Nombre" class="form-control" maxlength="50" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Categoria.Descripcion" class="form-label">Descripción:</label>
                            <textarea asp-for="Categoria.Descripcion" class="form-control" rows="3" maxlength="150"></textarea>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Guardar
                            </button>
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}