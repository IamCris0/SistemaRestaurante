@page "{id:int}"
@model RestauranteWeb.Pages.Reservas.DeleteModel
@{
    ViewData["Title"] = "Eliminar Reserva";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white"><h4><i class="bi bi-exclamation-triangle"></i> Eliminar Reserva</h4></div>
                <div class="card-body">
                    <div class="alert alert-warning"><strong>¡Advertencia!</strong> ¿Está seguro de que desea eliminar esta reserva?</div>
                    <dl class="row">
                        <dt class="col-sm-3">ID:</dt>
                        <dd class="col-sm-9">@Model.Reserva.Idreserva</dd>
                        <dt class="col-sm-3">Fecha/Hora:</dt>
                        <dd class="col-sm-9">@Model.Reserva.Fechahora.ToString("dd/MM/yyyy HH:mm")</dd>
                        <dt class="col-sm-3">Cliente ID:</dt>
                        <dd class="col-sm-9">@Model.Reserva.Idcliente</dd>
                        <dt class="col-sm-3">Mesa ID:</dt>
                        <dd class="col-sm-9">@Model.Reserva.Idmesa</dd>
                        <dt class="col-sm-3">Plato ID:</dt>
                        <dd class="col-sm-9">@Model.Reserva.Idplato</dd>
                    </dl>
                    <form method="post">
                        <input type="hidden" asp-for="Reserva.Idreserva" />
                        <div class="mt-4">
                            <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Sí, Eliminar</button>
                            <a asp-page="Index" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
 }
