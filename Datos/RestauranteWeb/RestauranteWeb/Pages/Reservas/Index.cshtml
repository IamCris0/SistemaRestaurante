@page
@model RestauranteWeb.Pages.Reservas.IndexModel
@{
    ViewData["Title"] = "Gestión de Reservas";
}
<div class="container mt-4">
    <h2>Gestión de Reservas</h2>
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    <div class="row mb-3">
        <div class="col-md-6">
            <a asp-page="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Nueva Reserva</a>
        </div>
        <div class="col-md-6">
            <form method="get" class="d-flex justify-content-end">
                <div class="input-group" style="max-width: 400px;">
                    <input type="text" name="filtro" class="form-control" placeholder="Buscar..." value="@Model.Filtro">
                    <button type="submit" class="btn btn-secondary"><i class="bi bi-search"></i> Buscar</button>
                </div>
            </form>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr><th>ID</th><th>Fecha y Hora</th><th>Cliente</th><th>Mesa</th><th>Acciones</th></tr>
            </thead>
            <tbody>
                @if (Model.Reservas != null && Model.Reservas.Count > 0)
                {
                    foreach (var r in Model.Reservas)
                    {
                        <tr>
                            <td>@r.Idreserva</td>
                            <td>@r.Fechahora.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>ID: @r.Idcliente</td>
                            <td>Mesa @r.Idmesa</td>
                            <td>
                                <a asp-page="Edit" asp-route-id="@r.Idreserva" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></a>
                                <a asp-page="Delete" asp-route-id="@r.Idreserva" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="5" class="text-center">No hay reservas registradas</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
 }