@page
@model RestauranteWeb.Pages.Reservas.CreateModel
@{
    ViewData["Title"] = "Crear Reserva";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white"><h4><i class="bi bi-plus-circle"></i> Crear Nueva Reserva</h4></div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Reserva.Idreserva" class="form-label">ID Reserva:</label>
                            <input asp-for="Reserva.Idreserva" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Reserva.Fechahora" class="form-label">Fecha y Hora:</label>
                            <input asp-for="Reserva.Fechahora" type="datetime-local" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Reserva.Idcliente" class="form-label">Cliente:</label>
                            <select asp-for="Reserva.Idcliente" class="form-select" required>
                                <option value="">-- Seleccione Cliente --</option>
                                @foreach (var c in Model.Clientes)
                                {
                                    <option value="@c.Idcliente">@c.Nombre @c.Apellido - @c.Cedula</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Reserva.Idmesa" class="form-label">Mesa:</label>
                            <select asp-for="Reserva.Idmesa" class="form-select" required>
                                <option value="">-- Seleccione Mesa --</option>
                                @foreach (var m in Model.Mesas)
                                {
                                    <option value="@m.Idmesa">Mesa @m.Numero - Cap: @m.Capacidad - @m.Estado</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Reserva.Idplato" class="form-label">Plato (Opcional):</label>
                            <select asp-for="Reserva.Idplato" class="form-select">
                                <option value="">-- Seleccione Plato --</option>
                                @foreach (var p in Model.Platos)
                                {
                                    <option value="@p.Idplato">@p.Nombre - $@p.Precio.ToString("N2")</option>
                                }
                            </select>
                        </div>
                        <div class="mt-4">
                            <button type="submit" class="btn btn-success"><i class="bi bi-save"></i> Guardar</button>
                            <a asp-page="Index" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
 }