@page "{id:int}"
@model RestauranteWeb.Pages.Clientes.DeleteModel
@{
    ViewData["Title"] = "Eliminar Cliente";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4><i class="bi bi-exclamation-triangle"></i> Eliminar Cliente</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>¡Advertencia!</strong> ¿Está seguro de que desea eliminar este cliente?
                        Esta acción no se puede deshacer.
                    </div>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["Error"]
                        </div>
                    }

                    <dl class="row">
                        <dt class="col-sm-3">ID Cliente:</dt>
                        <dd class="col-sm-9">@Model.Cliente.Idcliente</dd>

                        <dt class="col-sm-3">Cédula:</dt>
                        <dd class="col-sm-9">@Model.Cliente.Cedula</dd>

                        <dt class="col-sm-3">Nombre:</dt>
                        <dd class="col-sm-9">@Model.Cliente.Nombre @Model.Cliente.Apellido</dd>

                        <dt class="col-sm-3">Teléfono:</dt>
                        <dd class="col-sm-9">@Model.Cliente.Telefono</dd>

                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@Model.Cliente.Email</dd>

                        <dt class="col-sm-3">Dirección:</dt>
                        <dd class="col-sm-9">@Model.Cliente.Direccion</dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="Cliente.Idcliente" />

                        <div class="mt-4">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Sí, Eliminar
                            </button>
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}