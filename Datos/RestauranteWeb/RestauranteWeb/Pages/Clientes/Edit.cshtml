@page "{id:int}"
@model RestauranteWeb.Pages.Clientes.EditModel
@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-warning">
                    <h4><i class="bi bi-pencil"></i> Editar Cliente</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["Error"]
                        </div>
                    }

                    <form method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Cliente.Idcliente" class="form-label">ID Cliente:</label>
                                <input asp-for="Cliente.Idcliente" class="form-control" readonly />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Cliente.Cedula" class="form-label">Cédula:</label>
                                <input asp-for="Cliente.Cedula" class="form-control" maxlength="10" required />
                                <span asp-validation-for="Cliente.Cedula" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Cliente.Nombre" class="form-label">Nombre:</label>
                                <input asp-for="Cliente.Nombre" class="form-control" maxlength="50" required />
                                <span asp-validation-for="Cliente.Nombre" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Cliente.Apellido" class="form-label">Apellido:</label>
                                <input asp-for="Cliente.Apellido" class="form-control" maxlength="50" required />
                                <span asp-validation-for="Cliente.Apellido" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Cliente.Telefono" class="form-label">Teléfono:</label>
                                <input asp-for="Cliente.Telefono" class="form-control" maxlength="15" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Cliente.Email" class="form-label">Email:</label>
                                <input asp-for="Cliente.Email" type="email" class="form-control" maxlength="100" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Cliente.Direccion" class="form-label">Dirección:</label>
                            <textarea asp-for="Cliente.Direccion" class="form-control" rows="2" maxlength="150"></textarea>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Guardar Cambios
                            </button>
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}