@page
@model RestauranteWeb.Pages.Mesas.IndexModel
@{
    ViewData["Title"] = "Gestión de Mesas";
}

<div class="container mt-4">
    <h2>Gestión de Mesas</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col-md-6">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nueva Mesa
            </a>
        </div>
        <div class="col-md-6">
            <form method="get" class="d-flex justify-content-end">
                <div class="input-group" style="max-width: 400px;">
                    <input type="text" name="filtro" class="form-control"
                           placeholder="Buscar..." value="@Model.Filtro">
                    <button type="submit" class="btn btn-secondary">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Número</th>
                    <th>Capacidad</th>
                    <th>Estado</th>
                    <th width="200">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Mesas != null && Model.Mesas.Count > 0)
                {
                    foreach (var mesa in Model.Mesas)
                    {
                        <tr>
                            <td>@mesa.Idmesa</td>
                            <td>Mesa @mesa.Numero</td>
                            <td>@mesa.Capacidad personas</td>
                            <td>
                                @if (mesa.Estado == "Disponible")
                                {
                                    <span class="badge bg-success">@mesa.Estado</span>
                                }
                                else if (mesa.Estado == "Ocupada")
                                {
                                    <span class="badge bg-danger">@mesa.Estado</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">@mesa.Estado</span>
                                }
                            </td>
                            <td>
                                <a asp-page="Edit" asp-route-id="@mesa.Idmesa"
                                   class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-page="Delete" asp-route-id="@mesa.Idmesa"
                                   class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">
                            No hay mesas registradas
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}