@page "{id:int}"
@model RestauranteWeb.Pages.Mesas.EditModel
@{
    ViewData["Title"] = "Editar Mesa";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-warning">
                    <h4><i class="bi bi-pencil"></i> Editar Mesa</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Mesa.Idmesa" class="form-label">ID Mesa:</label>
                            <input asp-for="Mesa.Idmesa" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Mesa.Numero" class="form-label">Número:</label>
                            <input asp-for="Mesa.Numero" type="number" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Mesa.Capacidad" class="form-label">Capacidad:</label>
                            <input asp-for="Mesa.Capacidad" type="number" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Mesa.Estado" class="form-label">Estado:</label>
                            <select asp-for="Mesa.Estado" class="form-select" required>
                                <option value="">-- Seleccione Estado --</option>
                                <option value="Disponible">Disponible</option>
                                <option value="Ocupada">Ocupada</option>
                                <option value="Reservada">Reservada</option>
                            </select>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Guardar Cambios
                            </button>
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}
