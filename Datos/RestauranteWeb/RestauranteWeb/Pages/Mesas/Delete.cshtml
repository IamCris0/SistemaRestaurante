@page "{id:int}"
@model RestauranteWeb.Pages.Mesas.DeleteModel
@{
    ViewData["Title"] = "Eliminar Mesa";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4><i class="bi bi-exclamation-triangle"></i> Eliminar Mesa</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>¡Advertencia!</strong> ¿Está seguro de que desea eliminar esta mesa?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">ID Mesa:</dt>
                        <dd class="col-sm-9">@Model.Mesa.Idmesa</dd>

                        <dt class="col-sm-3">Número:</dt>
                        <dd class="col-sm-9">Mesa @Model.Mesa.Numero</dd>

                        <dt class="col-sm-3">Capacidad:</dt>
                        <dd class="col-sm-9">@Model.Mesa.Capacidad personas</dd>

                        <dt class="col-sm-3">Estado:</dt>
                        <dd class="col-sm-9">@Model.Mesa.Estado</dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="Mesa.Idmesa" />

                        <div class="mt-4">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Sí, Eliminar
                            </button>
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}