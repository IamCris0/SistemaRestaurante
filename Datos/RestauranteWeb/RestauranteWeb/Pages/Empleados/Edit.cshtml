@page "{id:int}"
@model RestauranteWeb.Pages.Empleados.EditModel
@{
    ViewData["Title"] = "Editar Empleado";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-warning">
                    <h4><i class="bi bi-pencil"></i> Editar Empleado</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["Error"]
                        </div>
                    }

                    <form method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Empleado.Idempleado" class="form-label">ID Empleado:</label>
                                <input asp-for="Empleado.Idempleado" class="form-control" readonly />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Empleado.Cedula" class="form-label">Cédula:</label>
                                <input asp-for="Empleado.Cedula" class="form-control" maxlength="10" required />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Empleado.Nombre" class="form-label">Nombre:</label>
                                <input asp-for="Empleado.Nombre" class="form-control" maxlength="50" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Empleado.Apellido" class="form-label">Apellido:</label>
                                <input asp-for="Empleado.Apellido" class="form-control" maxlength="50" required />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Empleado.Telefono" class="form-label">Teléfono:</label>
                                <input asp-for="Empleado.Telefono" class="form-control" maxlength="15" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Empleado.Email" class="form-label">Email:</label>
                                <input asp-for="Empleado.Email" type="email" class="form-control" maxlength="100" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Empleado.Salario" class="form-label">Salario:</label>
                                <input asp-for="Empleado.Salario" type="number" step="0.01" class="form-control" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Empleado.Idcargo" class="form-label">Cargo:</label>
                                <select asp-for="Empleado.Idcargo" class="form-select" required>
                                    <option value="">-- Seleccione un Cargo --</option>
                                    @foreach (var cargo in Model.Cargos)
                                    {
                                        <option value="@cargo.Idcargo">@cargo.Nombre</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Guardar Cambios
                            </button>
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}