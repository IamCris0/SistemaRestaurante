@page
@model RestauranteWeb.Pages.Empleados.IndexModel
@{
    ViewData["Title"] = "Gestión de Empleados";
}

<div class="container mt-4">
    <h2>Gestión de Empleados</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col-md-6">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nuevo Empleado
            </a>
        </div>
        <div class="col-md-6">
            <form method="get" class="d-flex justify-content-end">
                <div class="input-group" style="max-width: 400px;">
                    <input type="text" name="filtro" class="form-control"
                           placeholder="Buscar..." value="@Model.Filtro">
                    <button type="submit" class="btn btn-secondary">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Cédula</th>
                    <th>Nombre</th>
                    <th>Teléfono</th>
                    <th>Email</th>
                    <th>Salario</th>
                    <th width="200">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Empleados != null && Model.Empleados.Count > 0)
                {
                    foreach (var emp in Model.Empleados)
                    {
                        <tr>
                            <td>@emp.Idempleado</td>
                            <td>@emp.Cedula</td>
                            <td>@emp.Nombre @emp.Apellido</td>
                            <td>@emp.Telefono</td>
                            <td>@emp.Email</td>
                            <td>$@emp.Salario.ToString("N2")</td>
                            <td>
                                <a asp-page="Edit" asp-route-id="@emp.Idempleado"
                                   class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-page="Delete" asp-route-id="@emp.Idempleado"
                                   class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center">
                            No hay empleados registrados
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}