@page "{id:int}"
@model RestauranteWeb.Pages.Ingredientes.EditModel
@{
    ViewData["Title"] = "Editar Ingrediente";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-warning">
                    <h4><i class="bi bi-pencil"></i> Editar Ingrediente</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Ingrediente.Idingrediente" class="form-label">ID Ingrediente:</label>
                            <input asp-for="Ingrediente.Idingrediente" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Ingrediente.Nombre" class="form-label">Nombre:</label>
                            <input asp-for="Ingrediente.Nombre" class="form-control" maxlength="50" required />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Ingrediente.Cantidad" class="form-label">Cantidad:</label>
                                <input asp-for="Ingrediente.Cantidad" type="number" step="0.01" class="form-control" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Ingrediente.Unidadmedida" class="form-label">Unidad de Medida:</label>
                                <input asp-for="Ingrediente.Unidadmedida" class="form-control" maxlength="20" required />
                            </div>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Guardar Cambios
                            </button>
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}
